<div class="container">
  <div class="container-index">
    <div class="d-flex flex-column justify-content-center align-items-center mb-5">
      <h1 class="title-home my-5 text-center"><span>Recruit</span> Certified <br>Candidates</h1>
      <%= form_with url: users_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Elon Musk" %>
        <%= button_tag type: "submit", class: "btn btn-primary mx-3" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      <% end %>
    </div>
    <%# CARDS %>
    <div class="row row-cols-4">
      <% @users.each do |user| %>
        <% name_user = "#{user.first_name} #{user.last_name}" %>
        <div class="col">
          <div class="card-user">
            <div class="card-user__image" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= user.id %>">
              <% if user.photo.attached? %>
                <%= cl_image_tag user.photo.key, height: 300, width: 300, crop: :fill, class: "" %>
              <% end %>
              <div class="card-user__infos d-flex justify-content-between align-items-center mb-4 mt-3">
                <div class="d-flex flex-column justify-centent-center align-items-start">
                    <p class="name-card-index"><%= @name_user %></p>
                    <% if user.experiences.last.present? %>
                      <p class="job-card-index"><%= user.experiences.last.job_name %></p>
                    <% end %>
                </div>
              </div>
              <div class="card-user-skills border-top pt-3">
                <ul class="skills-list">
                  <li class="skill-pill">#Figma</li>
                  <li class="skill-pill">#Adobe</li>
                  <li class="skill-pill">#AI</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <%# #MODAL %>
        <div class="modal fade" id="exampleModal-<%= user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content no-scrollbar">
              <div class="modal-body">
                <div class="text-end mb-2">
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="mb-5 text-center">
                  <% if user.photo.attached? %>
                    <%= cl_image_tag user.photo.key, height: 180, width: 180, crop: :fill, class: "photo-modal" %>
                  <% end %>
                </div>
                <% if user_signed_in? %>
                  <% if user.experiences.last.present? %>
                    <div class="d-flex align-items-center mt-3 mb-2">
                      <p class= "company-name"><%= user.companies.last.name %></p>
                      <%= cl_image_tag user.companies.last.photo.key, height: 50, width: 50, crop: :fill, class: "rounded-circle border border-dark ms-3" %>
                    </div>
                    <p class="experience-date mb-4"><%= "#{user.experiences.last.start_date} - #{user.experiences.last.end_date}" %></p>
                    <p class="text-modal fw-bolder"><%= user.experiences.last.job_name %></p>
                    <p class="text-modal"> <%= truncate(user.experiences.last.job_description, length: 150) %></p>


                  <div class="resume-button-container mt-5 mx-auto" data-controller="display-modal-form">
                    <button class="btn btn-primary d-flex justify-content-between align-items-center resume-button"
                    data-action="click->display-modal-form#displayForm">
                      <%= "#{user.first_name} #{user.last_name}'s Resume" %> <i class="fa-solid fa-right-to-bracket pe-1"></i>
                    </button>
                      <%= simple_form_for [user, @role], html: {
                        class: "d-none",
                        data: {
                          display_modal_form_target: "form"
                        }
                      } do |f| %>
                        <%= f.input :recruiter %>
                        <%= f.association :company %>
                        <%= f.button :submit, class: "btn btn-primary" %>
                      <% end %>
                  </div>
                  <% end %>
                <% else %>
                  <% if user.experiences.last.present? %>
                    <div class="d-flex align-items-center mt-3 mb-2 blur-effect">
                      <p class= "company-name"><%= user.companies.last.name %></p>
                      <%= cl_image_tag user.companies.last.photo.key, height: 50, width: 50, crop: :fill, class: "rounded-circle border border-dark ms-3" %>
                    </div>
                    <p class="experience-date mb-4 blur-effect"><%= "#{user.experiences.last.start_date} - #{user.experiences.last.end_date}" %></p>
                    <p class="text-modal fw-bolder"><%= user.experiences.last.job_name %></p>
                    <p class="text-modal blur-effect"> <%= truncate(user.experiences.last.job_description, length: 150) %></p>
                  <% end %>


                  <div class="resume-button-container mt-5 mx-auto" data-controller="display-modal-form">
                    <button class="btn btn-primary d-flex justify-content-between align-items-center resume-button"
                    data-action="click->display-modal-form#displayForm">
                      <%= "#{user.first_name} #{user.last_name}'s Resume" %> <i class="fa-solid fa-right-to-bracket pe-1"></i>
                    </button>
                      <%= simple_form_for [user, @role], html: {
                        class: "d-none",
                        data: {
                          display_modal_form_target: "form"
                        }
                      } do |f| %>
                        <%= f.input :recruiter %>
                        <%= f.association :company %>
                        <%= f.button :submit, class: "btn btn-primary" %>
                      <% end %>
                  </div>


                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
