<div class="container" data-controller="particle">
  <div class="container-home row justify-content-center align-item-center">
    <div class="col">
      <div class="d-flex flex-column justify-content-center align-content-center h-100 mb-5">
        <h1 class="title-home">Welcome on <span><br>Referral Safe.<br><span></h1>
        <div class="d-flex flex-column mt-5">
          <%= link_to users_path, class: "mt-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
            <p>Start as a Recruiter...</p> <i class="fa-solid fa-right-to-bracket"></i>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to user_path(current_user), class: "mt-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
              <p>Start as a Candidate...</p> <i class="fa-solid fa-right-to-bracket"></i>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "mt-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
              <p>Start as a Candidate...</p> <i class="fa-solid fa-right-to-bracket"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col d-flex justify-content-center align-items-center">
      <%= image_tag("referal-animation.png", class: "hover-image", alt: "Your Image") %>
    </div>
  </div>
</div>
