<div class="container">
  <div class="container-home row justify-content-center align-item-center">
    <div class="col">
      <div class="d-flex flex-column justify-content-center align-items-center h-100 mb-5">
        <h1 class="title-home my-5">Welcome on<br><span>Referral Safe.</span></h1>
        <div class="d-flex align-items-center justify-content-center mt-5 w-100">
          <%= link_to users_path, class: "mt-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
            <p>Start as a Recruiter...</p> <i class="fa-solid fa-right-to-bracket fa-xl"></i>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to user_path(current_user), class: "mt-3 mx-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
              <p>Start as a Candidate...</p> <i class="fa-solid fa-right-to-bracket fa-xl"></i>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "mt-3 mx-3 d-flex justify-content-between align-items-center btn btn-primary button-home" do %>
              <p>Start as a Candidate...</p> <i class="fa-solid fa-right-to-bracket fa-xl"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
